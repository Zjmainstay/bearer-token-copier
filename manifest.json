{
  "manifest_version": 3,
  "name": "Bearer Token Copier",
  "version": "1.0.0",
  "description": "自动抓取网络请求中的Authorization Token并一键复制",
  "author": "Zjmainstay",
  "homepage_url": "https://github.com/Zjmainstay",
  "permissions": [
    "webRequest",
    "activeTab",
    "clipboardWrite",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "点击刷新并复制Token"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
